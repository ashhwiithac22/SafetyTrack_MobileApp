<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SUPER SIMPLE THEME - NO DARK MODE, NO COMPLEX INHERITANCE -->
    <style name="Theme.SafetyTrack" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Simple fallback theme -->
    <style name="Theme.SafetyTrack.Simple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>